<UserControl
    x:Class="Insteon.Mayhem.NewReactionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:my="clr-namespace:Insteon.Mayhem.Widgets"
    mc:Ignorable="d" 
    Width="400"
    Height="268"
    Loaded="UserControl_Loaded"
    Unloaded="UserControl_Unloaded"
    >
    
    <Canvas HorizontalAlignment="Left" VerticalAlignment="Top">
        <my:SwitchLincAnimation x:Name="animation" Canvas.Left="-66" Canvas.Top="-13" Step1="Press the SET button on the INSTEON device you would like to turn on or off with this reaction and hold it down for 3 seconds." Step2="The device will automatically link as soon as it enters linking mode." />
        <TextBlock Canvas.Left="12" Canvas.Top="12" Height="109" Name="captionTextBlock" Text="Are you still there?" Width="374" TextWrapping="Wrap" Visibility="Hidden" />
        <Button Canvas.Left="306" Canvas.Top="12" Content="Try Again" Height="28" Name="retryButton" Width="80" Click="retryButton_Click" Visibility="Hidden"/>
    </Canvas>
    
</UserControl>
