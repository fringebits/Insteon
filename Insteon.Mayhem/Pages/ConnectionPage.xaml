<UserControl x:Class="Insteon.Mayhem.ConnectionPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Width="400"
             Height="150"
             Loaded="UserControl_Loaded"
             >
    
    <Canvas HorizontalAlignment="Left" Name="canvas1" VerticalAlignment="Top">
        <TextBlock Canvas.Left="12" Canvas.Top="12" Height="21" Name="CaptionTextBlock" Text="One moment please, trying to connect to an INSTEON controller." Width="379" TextWrapping="NoWrap" />
        <ProgressBar Canvas.Left="12" Canvas.Top="39" Width="379" Height="16" Name="progressBar" Minimum="0" Maximum="100"/>
        <TextBlock Canvas.Left="12" Canvas.Top="98" Height="23" Name="statusTextBlock" Text="" Width="379" />
        <Button Canvas.Left="337" Canvas.Top="61" Content="Stop" Height="30" Name="stopButton" Width="54" Click="stopButton_Click" />
    </Canvas>
    
</UserControl>
