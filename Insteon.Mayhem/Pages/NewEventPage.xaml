<UserControl
    x:Class="Insteon.Mayhem.NewEventPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:my="clr-namespace:Insteon.Mayhem.Widgets"
    mc:Ignorable="d" 
    Width="400"
    Height="268"
    >

    <Canvas HorizontalAlignment="Left" VerticalAlignment="Top">
        <my:SwitchLincAnimation Canvas.Left="-67" Canvas.Top="-14" x:Name="animation" Step1="Press the SET button on the INSTEON device you would like to trigger this event and hold it down for 3 seconds." Step2="When the light begins blinking on the INSTEON device, press the Add button below to link the device." />
        <Button Canvas.Left="176" Canvas.Top="136" Content="Add" Height="30" Name="addButton" Width="56" Click="AddButton_Click" />
        <TextBlock Canvas.Left="245" Canvas.Top="134" Height="55" Name="helpTextBlock" Width="146" TextWrapping="Wrap" Visibility="Hidden" Text="An INSTEON device must be in linking mode first. Please try again." />
        <TextBlock Canvas.Left="12" Canvas.Top="12" Height="110" Name="captionTextBlock" Text="" Width="382" TextWrapping="Wrap" Visibility="Visible" />
    </Canvas>
    
</UserControl>
